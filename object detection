import cv2

def detect_cameras():
    
    cap = cv2.VideoCapture(0)

    while True:
       
        ret, frame = cap.read()

      
        cv2.imshow('Camera Detection', frame)

        # Break the loop if 'q' key is pressed
        if cv2.waitKey(1) & 0xFF == ord('q'):
            break

    # Release the capture object
    cap.release()
    cv2.destroyAllWindows()

detect_cameras()